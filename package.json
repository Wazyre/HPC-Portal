{
  "name": "hpcportal-server",
  "type": "module",
  "dependencies": {
    "@prisma/client": "^6.16.2",
    "@supabase/supabase-js": "^2.57.4",
    "@types/express": "^5.0.3",
    "@types/jsonwebtoken": "^9.0.10",
    "@types/node": "^24.7.0",
    "argon2": "^0.44.0",
    "body-parser": "^2.2.0",
    "concurrently": "^9.2.1",
    "dotenv": "^17.2.2",
    "eslint": "^9.36.0",
    "express": "^5.1.0",
    "express-async-handler": "^1.2.0",
    "jsonwebtoken": "^9.0.2",
    "path": "^0.12.7",
    "ts-node": "^10.9.2",
    "typescript": "^5.9.2"
  },
  "devDependencies": {
    "supabase": "^2.45.5"
  },
  "scripts": {
    "dev": "node --watch server.ts",
    "server": "node server.ts",
    "server-build": "npm install && tsc -b",
    "client": "npm run preview --prefix frontend",
    "client-build": "npm install --prefix frontend && npm run build --prefix frontend",
    "start": "concurrently \"npm run server\" \"npm run client\"",
    "build": "concurrently \"npm run server-build\" \"npm run client-build\"",
    "all": "concurrently \"node server.ts\" \"npm run dev --prefix frontend\""
  }
}
